{
  "name": "{{project-name}}",
  "version": "0.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/ubilabs/{{project-name}}.git"
  },
  "precommit": {
    "run": "test",
    "template": ".gitcommit.template"
  },
  "scripts": {
    "build": "npm run clean && NODE_ENV=production webpack -p",
    "changelog": "conventional-changelog-generator && $EDITOR -w CHANGELOG.md",
    "clean": "rm -rf build/*",
    "deploy": "gcloud-storage-upload -s '{{project-name}}' -p build",
    "postversion": "npm run changelog && git add CHANGELOG.md && git commit --amend --no-edit",
    "preversion": "npm test",
    "start": "npm run clean && webpack-dev-server",
    "test": "eslint webpack.config.js src/scripts"
  }
}